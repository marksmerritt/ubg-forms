<h4>Create a new form</h4>
<% @form_types.each do |form_type| %>
  <div>
    <%= link_to "#{form_type.name}", new_form_type_form_path(form_type), id: "create-new-form-#{form_type.id}" %>
  </div>
<% end %>

<div class="container mt-3">
  <h2>Submitted Forms</h2>
  <input class="form-control" id="myInput" type="text" placeholder="Search for anything..">
  <br>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Form Type</th>
        <th>Date Submitted</th>
        <th>Submitted By</th>
        <th>Job #</th>
      </tr>
    </thead>
    <tbody id="myTable">
      <% @forms.each do |form| %>
        <tr>
          <td><%= form.form_type.name %></td>
          <td><%= form.created_at %></td>
          <td><%= form.user.display_name %></td>
          <td><%= form.job_number %></td>
          <td class="text-right">
            <a href="#" class="btn btn-warning btn-link btn-icon btn-sm edit"><i class="fa fa-edit"></i></a>
            <a href="#" class="btn btn-danger btn-link btn-icon btn-sm remove"><i class="fa fa-times"></i></a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $(document).ready(function(){
    $("#myInput").on("keyup", function() {
      var value = $(this).val().toLowerCase();
      $("#myTable tr").filter(function() {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
      });
    });
  });
</script>