<div class="new-form-type-link-container">
  <i class="fa fa-plus-square"></i>
  <%= link_to "Create A New Form Type", new_form_type_path, id: "new-form-type" %>
</div>

<div class="container forms-table-container form-types-table">
  <h4 class="forms-table__header">Manage Form Types</h4>

  <table class="table table-striped table-bordered forms-table">
    <thead>
      <tr>
        <th>Form Type</th>
        <th>Edit</th>
        <th>Archive</th>
      </tr>
    </thead>
    <tbody>
      <% @form_types.each do |form_type| %>
        <tr>
          <td>
            <%= form_type.name %>
          </td>
          <td class="text-center">
            <%= link_to edit_form_type_path(form_type), id: "edit-form-type-#{form_type.id}" do %>
              <%= display_icon("clipboard-edit", "icon--sm") %>
            <% end %>
          </td>
          <td class="text-center">
            <%= link_to archive_form_type_path(form_type), method: :patch, data: { confirm: "Are you sure you want to archive this form? This will not delete any #{form_type.name}'s that have been created." } do %>
              <%= display_icon("bin1", "icon--sm icon--danger icon--trash") %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>