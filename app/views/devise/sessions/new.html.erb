<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login100-form validate-form" } ) do |f| %>
        <div class="login-logo-container">
          <%= image_tag("um-logo.png", class: "login-logo") %>
          <span class="login-logo-text">Portal</span>  
        </div>
        
        <span class="login100-form-title p-b-43">
          Login to continue
        </span>
        
        
        <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "field-email", class: "input100", placeholder: "Email..." %>
          <span class="focus-input100">Email</span>
        </div>
        
        
        <div class="wrap-input100 validate-input" data-validate="Password is required">
          <%= f.password_field :password, autocomplete: "current-password", id: "field-password", class: "input100", placeholder: "Password..." %>
          <span class="focus-input100">Password</span>
        </div>

        <div class="flex-sb-m w-full p-t-3 p-b-32 login-links">
          <div class="contact100-form-checkbox">
            <%= f.check_box :remember_me, class: "input-checkbox100", id: "ckb1" %>
            <label class="label-checkbox100" for="ckb1">
              Remember me
            </label>
          </div> 
        </div>
    

        <div class="container-login100-form-btn">
          <%= f.submit "Login", id: "sign-in-submit", class: "login100-form-btn" %>
        </div>
      <% end %>

      <div class="login100-more"></div>
    </div>
  </div>
</div>
